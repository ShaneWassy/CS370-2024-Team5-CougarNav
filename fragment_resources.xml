<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/resources_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Campus Resources"
            android:textStyle="bold"
            android:textSize="24sp"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Resource 1: Library\nResource 2: Cafeteria\nResource 3: Counseling Center\nResource 4: Computer Labs\nResource 5: Student Organizations" />
    </LinearLayout>
</ScrollView>
